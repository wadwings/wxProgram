.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.l-form-btn-class{
  display: flex;
  justify-content: space-around;
  margin-top: 10rpx;
}

.container{
  display:grid;
  grid-template-rows: repeat(auto-fill, 100px);
  padding: 0;
}
.block{
  grid-template-columns: 60% 40%;
  display:grid;
  text-align: center;
  align-items: center;
  border-bottom:0.2px grey solid;
  border-top:0.1px rgb(223, 223, 223) solid;
}
#0{
  border-top: 0;
}
.icon image{
  height: 90px;
  display:block;
  width:auto;
  border-radius: 5%;
}

.smallPart{
  padding:5px;
}

text{
  overflow : hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 4;
    -webkit-box-orient: vertical;
    word-break: break-all;
}

#rich-text{
  position: absolute;
  top:0;
  width:100%;
  height:100%;
}

#nav-bar{
  position: fixed;
  bottom: 0;
  width:100%;
  height:60px;
  font-size: 20px;
  text-align: center;
  border-radius: 5%;
  outline:none;
}

#nav-bar view{
  background-color: rgb(228, 228, 228);
  border: 2px rgba(0,0,0,0.1) solid;
  height:60px;

}

.navi{
  height:100%;
  width:100%;
  display:flex;
  align-items: center;
  justify-content: center;
}

#userinfo{
  display:block;
  height:50px;
}

.userinfo-avatar{
  width:50px!important;
  height:50px;
  padding:0!important;
  margin:0 30px!important;
  display: inline-block;
}

.login-text{
  color:rgb(0, 81, 255);
  font-weight: 700;
}

.s_img{
  width:100%;
  height:100%;
  border-radius: 10%;
}

.swiper{
  padding:20px 40px;
}